{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"moduleResolution": "node",
		"outDir": "dist",
		"removeComments": true,
		"sourceMap": true,
		"target": "esnext",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": ["lib/**/*.ts", "src/**/*.ts", "src/**/*.vue"],
	"exclude": ["node_modules"]
}
